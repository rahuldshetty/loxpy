class Circle{
  fn init(radius){
    this.set_radius(radius);
    return;
  }

  fn set_radius(val){
    this.radius = val;
  }

  fn get_radius(){
    return this.radius;
  }

  fn area(){
    return this.radius * this.radius * 3.14; 
  }
}

var c1 = Circle(2);

print c1.get_radius();
print c1.area();

c1.set_radius(1);

print c1.get_radius();
print c1.area();